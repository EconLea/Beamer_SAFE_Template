% Define SAFE color scheme
\definecolor{safeblue}{RGB}{4,92,163}
\definecolor{safegreen}{RGB}{125,198,33}
\definecolor{pastelsafegreen}{RGB}{240,250,230}

\colorlet{primary}{safegreen}         % Main color, change 'purple' to 'red', 'green', etc.
\colorlet{titlefont}{white}         % Main color, change 'purple' to 'red', 'green', etc.
\colorlet{secondary}{safegreen}     
\colorlet{tertiary}{safeblue}        % footer color 


% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=primary}

% Headline
\setbeamercolor{headline}{fg=lightgray,bg=primary}
\setbeamercolor{headline rule}{bg=primary}
\setbeamercolor{headline title}{fg=titlefont}
\setbeamercolor{headline author}{fg=titlefont}
\setbeamercolor{headline institute}{fg=titlefont}

% Block
\setbeamercolor{block title}{fg=blue,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=blue,bg=secondary}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=secondary}

% Example Block
\setbeamercolor{block example title}{fg=blue,bg=secondary}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=secondary}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=safeblue}

% Footer 
\setbeamercolor{footbox}{fg=titlefont,bg=primary} 

% Captions
\setbeamercolor{caption name}{fg=safeblue} % Caption Label
\setbeamercolor{caption}{fg=black, bg=white} % Caption Text

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
